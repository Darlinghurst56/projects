{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simple Agent Configuration for Home Dashboard",
  "description": "Minimal agent configuration for single-user MVP",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version"
    },
    "agents": {
      "type": "object",
      "description": "Available agents",
      "additionalProperties": {
        "type": "object",
        "required": ["id", "name", "capabilities", "keywords"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique agent identifier"
          },
          "name": {
            "type": "string",
            "description": "Human-readable agent name"
          },
          "description": {
            "type": "string",
            "description": "Brief description of agent's role"
          },
          "capabilities": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of agent capabilities"
          },
          "keywords": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Keywords for task assignment"
          }
        }
      }
    },
    "defaultAgent": {
      "type": "string",
      "description": "Default agent when no match found",
      "default": "frontend"
    }
  },
  "required": ["version", "agents"]
}