# Intel N100 Development Environment Optimizations
# Optimized for 800MHz base frequency, 4 cores, 16GB RAM

# Node.js Memory Management
NODE_OPTIONS="--max-old-space-size=2048 --optimize-for-size --gc-interval=100"

# V8 Engine Optimizations for Intel N100
NODE_ENV=development
UV_THREADPOOL_SIZE=4

# Development Server Optimization
CHOKIDAR_USEPOLLING=false
CHOKIDAR_INTERVAL=1000

# Vite Development Server
VITE_LEGACY_FORCE=false
VITE_OPTIMIZED_DEPS_FORCE=true

# Browser DevTools Integration
CHROME_REMOTE_DEBUG_PORT=9222
CHROME_MAX_OLD_SPACE_SIZE=1024

# Intel N100 Performance Monitoring
MONITOR_PERFORMANCE=true
PERFORMANCE_LOG_INTERVAL=60000

# Concurrent Process Management
CONCURRENCY_MAX_PROCESSES=4
CONCURRENCY_RESTART_TRIES=3
CONCURRENCY_RESTART_AFTER=2000

# File System Optimization
FS_WATCH_INTERVAL=1000
FS_BINARY_INTERVAL=2000

# Build Optimization
BUILD_TARGET=es2018
BUILD_MINIFY=esbuild
BUILD_MAX_PARALLEL_OPS=2

# Hot Module Replacement
HMR_TIMEOUT=10000
HMR_OVERLAY=false

# Development Server Ports
SERVER_PORT=3000
CLIENT_PORT=3003
MONITOR_PORT=3004

# Intel N100 Specific Settings
CPU_CORES=4
CPU_BASE_FREQ=800
MEMORY_TOTAL_GB=16
MEMORY_DEV_LIMIT_GB=12

# Performance Thresholds
CPU_WARNING_THRESHOLD=85
CPU_CRITICAL_THRESHOLD=95
MEMORY_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=90
RESPONSE_TIME_WARNING_MS=500
RESPONSE_TIME_CRITICAL_MS=1000