# Security Environment Variables Template
# Copy this file to .env and fill in secure values for production

# CRITICAL: JWT Secret - Use a long, random string (minimum 64 characters)
# Generate with: openssl rand -hex 64 or node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-minimum-64-characters-random-hex-string

# Token Encryption Key for Google OAuth tokens (64-character hex string)
# Generate with: openssl rand -hex 32
TOKEN_ENCRYPTION_KEY=your-64-character-hex-encryption-key-for-aes-256-gcm

# Family Member PINs (4-8 digits, avoid common patterns)
# WARNING: Change these default values immediately
FAMILY_MEMBER_1_PIN=1234
FAMILY_MEMBER_1_NAME=Family Member 1

FAMILY_MEMBER_2_PIN=5678
FAMILY_MEMBER_2_NAME=Family Member 2

ADMIN_PIN=9999
ADMIN_NAME=Admin User

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=localhost

# Security Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_DNS_MONITORING=true
FEATURE_GOOGLE_INTEGRATION=true
FEATURE_AI_CHAT=true
FEATURE_DASHY_INTEGRATION=true
FEATURE_GOOGLE_AUTH=true

# Development Configuration (set to false for production)
MOCK_DATA=false
DEBUG=false
VERBOSE_LOGGING=false

# SECURITY CHECKLIST:
# [ ] Changed default JWT_SECRET to a cryptographically secure random string
# [ ] Generated unique TOKEN_ENCRYPTION_KEY for AES-256-GCM
# [ ] Updated family member PINs from defaults
# [ ] Configured Google OAuth credentials
# [ ] Set appropriate CORS origins for your domain
# [ ] Verified NODE_ENV is set to 'production' for production deployment
# [ ] Secured .env file permissions (chmod 600 .env)
# [ ] Added .env to .gitignore to prevent accidental commits